extend ../../layouts/_default.pug

block variables
  include ../_addon_list.pug
  - let ogp = true
  - var doc_path = "../../"

block content
  .container
    .row
      .col-12.border
        h2 Extends
        p プラットホームの機能を拡張するアドオン群
    each addns in cublic
      .row
        .col-12.border
           h3 #{addns.name}
      .row
        .col-4.border
          img(src=`${doc_path}/assets/img/docs/cublic/doc-${addns.image}.png`, alt="")
        .col-7.border
          p #{addns.dict}
        .col-1.border
          a(href=`${addns.dir}`) LINK

